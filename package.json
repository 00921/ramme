{
  "repository": "terkelg/ramme",
  "author": "Terkel Gjervig",
  "license": "MIT",
  "scripts": {
    "test": "standard",
    "build": "npm run test && gulp build",
    "prestart": "gulp",
    "start": "electron app",
    "pack": "npm run build && build --dir --x64",
    "dist:mac": "npm run build && build --mac --x64",
    "dist": "npm run build && build -wl --x64",
    "release:mac": "npm run build && build --mac --x64 --publish always",
    "release": "npm run build && build -wl --x64 --publish always",
    "publish": "scripts/release.sh"
  },
  "build": {
    "appId": "com.terkel.ramme",
    "mac": {
      "category": "public.app-category.social-networking"
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ]
    }
  },
  "devDependencies": {
    "babel-core": "^6.18.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.18.0",
    "copy-webpack-plugin": "^4.0.0",
    "electron": "^1.4.5",
    "electron-builder": "^7.15.2",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-inject-svg": "^0.1.9",
    "gulp-sass": "^2.3.2",
    "standard": "^8.5.0",
    "webpack": "^1.13.3"
  },
  "babel": {
    "plugins": [
      "transform-es2015-modules-commonjs"
    ]
  }
}
